        <!--<Setter Property="BorderThickness" Value="0"/>-->
        <!--<Setter Property="Foreground" Value="Blue"/>-->
        <!--
                        </Trigger>
                    </Style.Triggers>-->
    </Style>

</ResourceDictionary>