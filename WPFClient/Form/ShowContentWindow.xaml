<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClient.Form"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="WPFClient.Form.ShowContentWindow"
        mc:Ignorable="d"
        Title="内容信息"  WindowStyle="none" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Width="320"  Loaded="Window_Loaded" Height="170">
    <DockPanel >
        <DockPanel DockPanel.Dock="Top" MouseDown="DockPanel_MouseDown" VerticalAlignment="Top" Height="40" HorizontalAlignment="Stretch" Background="{StaticResource themeBrush}">
            <TextBlock  FontSize="18" DockPanel.Dock="Right"  Foreground="White" Margin="0,8,5,0" VerticalAlignment="Center"  MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" HorizontalAlignment="Center">✖</TextBlock>
            <TextBlock  FontSize="18" Name="TitleTxt" Foreground="White"  Margin="40,4,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        </DockPanel>
        <StackPanel DockPanel.Dock="Top" Margin="20" Orientation="Vertical" Height="128">
            <TextBlock Name="ContentTxt" Foreground="Black" FontSize="16"></TextBlock>
        </StackPanel>
    </DockPanel>
</Window>
