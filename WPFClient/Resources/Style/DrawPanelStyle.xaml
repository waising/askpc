    <!-- draw pensize style -->

    <Style  x:Key="PenColorRadioButton"  TargetType="RadioButton">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="bd1" BorderBrush="{TemplateBinding BorderBrush}" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
                                        BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                                <Border x:Name="bd2" BorderBrush="White"
                                        BorderThickness="2" Background="{TemplateBinding Background}">
                                    <Rectangle VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                </Rectangle>
                            </Border>
                            </Border>
                            <ContentPresenter/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="BorderBrush" TargetName="bd1">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{TemplateBinding BorderBrush}"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="BorderBrush" TargetName="bd2">
                                    <Setter.Value>
                                        <SolidColorBrush Color="White"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" TargetName="bd2" >
                                    <Setter.Value>
                                        <SolidColorBrush Color="{TemplateBinding BorderBrush}"/>
                                    </Setter.Value>
                                </Setter>
      
                                <Setter Property="BorderBrush" TargetName="bd1">
                                    <Setter.Value>
                                        <SolidColorBrush Color="White"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

