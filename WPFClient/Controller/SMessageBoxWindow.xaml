    </Window.Resources>
    <!--
	<Window.Triggers>
		<EventTrigger RoutedEvent="FrameworkElement.Loaded">
			<BeginStoryboard Storyboard="{StaticResource StoryboardWinLoaded}"/>
		</EventTrigger>
	</Window.Triggers>
